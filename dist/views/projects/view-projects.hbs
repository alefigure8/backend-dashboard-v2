<h3 class="category__title">Listado de Proyectos</h2>


<table class="table__content" id="table__content">
  <tr class="table__content-title">
    <th>Id</th>
    <th>Título</th>
    <th>Descrición</th>
    <th>Categoría</th>
    <th>Imagen</th>
    <th>Link</th>
    <th></th>
  </tr>
  
{{#each projects}}
  <tr class="table__content-body">
    <td>{{id}}</td>
    <td class="body__td-title"><a href="/project/update/{{id}}">{{title}}</a></td>
    <td>{{description}}</td>
    <td>{{name}}</td>
    <td class="category__table-img">{{img}}</td>
    <td>{{link}}</td>
    <td><a href="/project/delete/{{id}}" class="btn btn-danger">Delete</a></td>
  </tr>
{{/each}}
</table>