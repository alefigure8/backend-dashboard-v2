<h2>Blog</h2>


<table class="table__content">
  <tr class="table__content-title">
    <th>Id</th>
    <th>Título</th>
    <th>Categorías</th>
    <th>Fecha</th>
    <th></th>
  </tr>
  
{{#each blogs}}
  <tr class="table__content-body">
    <td>{{id}}</td>
    <td class="body__td-title"><a href="update/{{id}}">{{title}}</a></td>
    <td>{{name}}</td>
    <td id="dataFormat" class="dataFormat">{{created_at}}</td>
    <td><a href="/blog/delete/{{id}}" class="btn btn-danger">Delete</a></td>
  </tr>


{{else}}
<p>Aú no hay entradas de blog</p>

{{/each}}


</table>